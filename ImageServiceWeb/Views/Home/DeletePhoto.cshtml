@model ImageServiceWeb.Models.PhotosModel

@{
    ViewBag.Title = "DeletePhoto";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Photo</title>
</head>
<body>
    <div class="text-md-center">
        <h3>Are you sure you want to delete this photo?</h3>
        <div class="thumbnail">
            <img class="rounded-circle" src="@ViewBag.img.relativeThumbImagePath" alt="">
            <div class="caption">
                <h5>@Path.GetFileNameWithoutExtension(ViewBag.img.absoluteThumbImagePath)</h5>
                <p><strong>Year Taken: @ViewBag.img.dateTaken.Year</strong></p>
                <p><strong>Month Taken: @ViewBag.img.dateTaken.ToString("MMMM")</strong></p>
                <p>
                    <a href="@Url.Action("ViewPhoto", "Home", new { imgPath = @ViewBag.img.relativeFullImagePath })" class="btn btn-info btn-xs" role="button">Cancel</a>
                    <a href="@Url.Action("DeletePhotoConfirmation", "Home", new { imgPath = @ViewBag.img.relativeFullImagePath })" class="btn btn-danger btn-xs" role="button">Delete</a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>
