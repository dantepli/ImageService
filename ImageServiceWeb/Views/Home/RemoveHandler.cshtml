
@{
    ViewBag.Title = "RemoveHandler";

}

<h2>RemoveHandler</h2>

<p>Are you certain about your desire to remove @ViewBag.handlerVerbatimString?</p>
<button type="button" id="removeBtn" class="btn btn-success">Yesss</button>
<button type="button" id="cancelRemoveBtn" class="btn btn-danger" data-toggle="button">NOOOOOO I REGRET ITT</button>

@Html.Hidden("RemoveConfirmed", Url.Action("Config", "Home"))

<script>
    $(document).ready(function () {
        $("#removeBtn").click(function () {
            $(this).prop('disabled', true);
            $(document.getElementById("cancelRemoveBtn")).prop('disabled', true);
            var handler = {
                handler:  "@ViewBag.handler"
            };
            $.post("@Url.Action("RemoveHandlerConfirmation")", handler, function () {
                var url = $('#RemoveConfirmed').val();
                location.href = url;
            });
        });
        $("#cancelRemoveBtn").click(function () {
            var url = $('#RemoveConfirmed').val();
            location.href = url;
        });
    });

</script>