@model ImageServiceWeb.Models.SettingsModel

@{
    ViewBag.Title = "Config";

}

<h2>Configuration</h2>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SettingsContainer.OutputDir)
        </th>
        <td>@Html.DisplayFor(model => model.SettingsContainer.OutputDir)</td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SettingsContainer.SourceName)
        </th>
        <td>@Html.DisplayFor(model => model.SettingsContainer.SourceName)</td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SettingsContainer.LogName)
        </th>
        <td>@Html.DisplayFor(model => model.SettingsContainer.LogName)</td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SettingsContainer.ThumbnailSize)
        </th>
        <td>@Html.DisplayFor(model => model.SettingsContainer.ThumbnailSize)</td>
    </tr>
</table>

<!-- Modal -->
<div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="removeModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="removeHandlerTitle">Remove Handler</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you wish to remove this handler?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success">Confirm</button>
            </div>
        </div>
    </div>
</div>

<div class="list-group">
    <li class="list-group-item">@Html.DisplayNameFor(model => model.SettingsContainer.Handlers)</li>
    @foreach (var item in Model.SettingsContainer.Handlers)
    {
        <a data-toggle="modal" data-target="#removeModal" href="#removeModal" class="list-group-item list-group-item-action">@Html.DisplayFor(modelItem => item)</a>
    }
</div>
